<UserControl x:Class="WpfApp.Tab1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <!-- Bezeichnung für das Eingabefeld "Produkt" -->
        <Label Content="Produkt" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" />

        <!-- TextBox für die Eingabe des Produktes -->
        <TextBox x:Name="inputTextBox" Width="300" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0" />

        <!-- Bezeichnung für das Fließtextfeld "Beschreibung" -->
        <Label Content="Beschreibung:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" />

        <!-- Fließtextfeld für die Beschreibung (mehrzeiliges TextBox) -->
        <TextBox x:Name="descriptionTextBox" Width="300" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,130,0,0" 
AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

        <!-- Bezeichnung für das Eingabefeld "Preis" -->
        <Label Content="Preis:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,240,0,0" />

        <!-- TextBox für die Eingabe des Preises -->
        <TextBox x:Name="priceTextBox" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,270,0,0" 
PreviewTextInput="PriceTextBox_PreviewTextInput" />

        <!-- Bezeichnung für das Eingabefeld "Anzahl" -->
        <Label Content="Anzahl:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,310,0,0" />

        <!-- TextBox für die Eingabe der Anzahl -->
        <TextBox x:Name="quantityTextBox" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,340,0,0" 
PreviewTextInput="QuantityTextBox_PreviewTextInput" />

        <!-- Button zum Anzeigen der Eingabe -->
        <Button Content="Berechne und Speichern" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,380,0,0" Click="Button_Click"/>
        <!-- Button zum Reset der Eingabe -->
        <Button Content="Reset" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,380,0,0" Click="ResetButton_Click"/>

        <!-- Label für die Ausgabe -->
        <TextBlock x:Name="outputLabel" Width="300" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,430,0,0" />
    </Grid>
</UserControl>




