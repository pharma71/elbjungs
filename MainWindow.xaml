<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Formular" Height="600" Width="800">
    <Grid>
        <TabControl x:Name="MyTab" SelectionChanged="TabControl_SelectionChanged">
            <!-- Tab 1: Eingabe -->
            <TabItem x:Name="TabItem1" Header="Eingabe">
                <Grid>
                    <!-- Bezeichnung für das Eingabefeld "Nachricht" -->
                    <Label Content="Produkt" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" />

                    <!-- TextBox für die Eingabe der Nachricht -->
                    <TextBox x:Name="inputTextBox" Width="300" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0" />

                    <!-- Bezeichnung für das Fließtextfeld "Beschreibung" -->
                    <Label Content="Beschreibung:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" />

                    <!-- Fließtextfeld für die Beschreibung (mehrzeiliges TextBox) -->
                    <TextBox x:Name="descriptionTextBox" Width="300" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,130,0,0" 
              AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

                    <!-- Bezeichnung für das Eingabefeld "Preis" -->
                    <Label Content="Preis:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,240,0,0" />

                    <!-- TextBox für die Eingabe des Preises -->
                    <TextBox x:Name="priceTextBox" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,270,0,0" 
              PreviewTextInput="PriceTextBox_PreviewTextInput" />

                    <!-- Bezeichnung für das Eingabefeld "Anzahl" -->
                    <Label Content="Anzahl:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,310,0,0" />

                    <!-- TextBox für die Eingabe der Anzahl -->
                    <TextBox x:Name="quantityTextBox" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,340,0,0" 
              PreviewTextInput="QuantityTextBox_PreviewTextInput" />

                    <!-- Button zum Anzeigen der Eingabe -->
                    <Button Content="Berechne und Speichern" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,380,0,0" Click="Button_Click"/>
                    <!-- Button zum Reset der Eingabe -->
                    <Button Content="Reset" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,380,0,0" Click="ResetButton_Click"/>

                    <!-- Label für die Ausgabe -->
                    <TextBlock x:Name="outputLabel" Width="300" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,430,0,0" />
                </Grid>
            </TabItem>

            <!-- Tab 2: Bearbeitung -->
            <TabItem x:Name="TabItem2" Header="Bearbeitung">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <!-- DataGrid -->
                        <RowDefinition Height="3*" />
                        <!-- Edit Form -->
                    </Grid.RowDefinitions>
                    
                    <!-- DataGrid zum Anzeigen der Daten -->
                    <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" 
                              Margin="10" IsReadOnly="False" 
                              SelectionChanged="DataGrid_SelectionChanged">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White" />
                                <Style.Triggers>
                                    <!-- Trigger für die ausgewählte Zeile -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Yellow" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Edit Form -->
                    <StackPanel Grid.Row="1" Margin="10" Visibility="Collapsed" x:Name="editForm">
                        <TextBlock Text="Bearbeiten" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />

                        <TextBlock Text="Nachricht:" />
                        <TextBox x:Name="editProdukt" Margin="0,0,0,10" />

                        <TextBlock Text="Beschreibung:" />
                        <TextBox x:Name="editBeschreibung" Margin="0,0,0,10" />

                        <TextBlock Text="Preis:" />
                        <TextBox x:Name="editPreis" Margin="0,0,0,10" />

                        <TextBlock Text="Anzahl:" />
                        <TextBox x:Name="editAnzahl" Margin="0,0,0,10" />

                        <!-- Buttons für Bearbeiten und Speichern -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
                            <Button Content="Speichern" Width="100" Margin="5" Click="SaveButton_Click"/>
                            <Button Content="Löschen" Width="100" Margin="5" Click="DeleteButton_Click"/>
                            <Button Content="Reset" Width="100" Margin="5" Click="ResetButton2_Click"/>
                        </StackPanel>

                    </StackPanel>
               

                
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
